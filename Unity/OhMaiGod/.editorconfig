# Root EditorConfig
root = true

# 모든 C# 파일에 적용
[*.cs]

# 들여쓰기
indent_style = space
indent_size = 4

# 변수 및 메서드 네이밍 규칙
dotnet_naming_rule.private_fields_should_be_camel_with_m_prefix.severity = suggestion
dotnet_naming_rule.private_fields_should_be_camel_with_m_prefix.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_with_m_prefix.style = camel_case_with_m_prefix

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.required_modifiers = 

dotnet_naming_style.camel_case_with_m_prefix.capitalization = camel_case
dotnet_naming_style.camel_case_with_m_prefix.required_prefix = m

# 클래스 및 메서드 PascalCase
dotnet_naming_rule.methods_should_be_pascal.severity = suggestion
dotnet_naming_rule.methods_should_be_pascal.symbols = methods
dotnet_naming_rule.methods_should_be_pascal.style = pascal_case

dotnet_naming_symbols.methods.applicable_kinds = method
dotnet_naming_symbols.methods.applicable_accessibilities = *
dotnet_naming_symbols.methods.required_modifiers = 

dotnet_naming_style.pascal_case.capitalization = pascal_case
